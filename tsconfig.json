{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "rootDir": ".",
    "outDir": ".", 
    "resolveJsonModule": true,
    "composite": true
  },
  "files": ["package.json"],
  "exclude": [
    "dist",
    "docs",
    "node_modules",
  ],
  "lib": ["es2015"]
}
